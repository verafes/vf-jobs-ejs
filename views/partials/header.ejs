<h1>The Secret Word EJS Application</h1>
<% if (user) { %>
  <p>User <%= user.name %> is logged on.</p>
  <form method="POST" action="/sessions/logoff">
    <!--include CSRF-->
    <input type="hidden" name="_csrf" value="<%= _csrf %>">
  <button>Logoff</button>
  </form>
<% } %>
<% if (errors) {
  errors.forEach((err) => { %>
    <div>
      Error: <%= err %>
    </div>
  <% })
} %>
<% if (info) {
  info.forEach((msg) => { %>
    <div>
      Info: <%= msg %>
    </div>
  <% })
} %>
<hr />